<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PFBv01.About"
             Title="About">
    <VerticalStackLayout>
        <Label Text="Welcome to Pico Fermi Bagel!" VerticalOptions="Center" HorizontalOptions="Center" />
        
        <!-- Add a spacer blank line -->
        <Label Text="" VerticalOptions="Center" HorizontalOptions="Center" />        
        <!-- Add a spacer solid black line -->
        <BoxView HeightRequest="1" Color="Black" HorizontalOptions="FillAndExpand" />

        <!-- Add a spacer blank line -->
        <Label Text="" VerticalOptions="Center" HorizontalOptions="Center" />        

        <Label x:Name="BuildVersionLabel" Text="Build Version: " VerticalOptions="Center" HorizontalOptions="Center" />
        <Label Text="" VerticalOptions="Center" HorizontalOptions="Center" />
        <Label x:Name="BuildDateLabel" Text="Last Build Date: " VerticalOptions="Center" HorizontalOptions="Center" />        

    </VerticalStackLayout>
</ContentPage>