<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PFBv01.GameSettings"
             Title="GameSettings">
    <VerticalStackLayout>        

        <!-- Add a spacer blank line -->
        <Label Text="" VerticalOptions="Center" HorizontalOptions="Center" />
        <!-- Add a spacer solid black line -->
        <BoxView HeightRequest="1" Color="Black" HorizontalOptions="FillAndExpand" />

        <!-- Add a spacer blank line -->
        <Label Text="" VerticalOptions="Center" HorizontalOptions="Center" />

        <!-- Add Label and CheckBox for turning off game sounds -->
        <HorizontalStackLayout VerticalOptions="Center" HorizontalOptions="Start" Margin="40,0,0,0">
            <Label Text="Turn off game sounds:" VerticalOptions="Center" HorizontalOptions="Start" />
            <CheckBox x:Name="GameSoundsCheckBox" VerticalOptions="Center" HorizontalOptions="Start" 
                       CheckedChanged="OnGameSoundsCheckBoxCheckedChanged"/>
        </HorizontalStackLayout>

        <!-- Add a spacer blank line -->
        <Label Text="" VerticalOptions="Center" HorizontalOptions="Center" />

        <!-- Add Label and CheckBox for turning on game hint -->
        <HorizontalStackLayout VerticalOptions="Center" HorizontalOptions="Start" Margin="40,0,0,0">
            <Label Text="Turn Learn Mode on:" VerticalOptions="Center" HorizontalOptions="Start" />
            <CheckBox x:Name="LearnModeCheckBox" VerticalOptions="Center" HorizontalOptions="Start"
                      CheckedChanged="OnLearnModeCheckBoxCheckedChanged"/>
        </HorizontalStackLayout>





    </VerticalStackLayout>
</ContentPage>