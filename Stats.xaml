<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PFBv01.Stats"
             Title="Stats">
    <VerticalStackLayout>
        <Label 
            Text="View and Reset your game statistics"
            FontSize="18"            
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


     
        <!-- Add a spacer solid black line -->
        <BoxView HeightRequest="1" Color="Black" HorizontalOptions="FillAndExpand" />
        <!-- Add a spacer blank line -->
        <Label Text="" VerticalOptions="Center" HorizontalOptions="Center" />       

        <Label 
            x:Name="GamesLabel"
            Text="Games: 0"
            FontSize="18"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Label 
            x:Name="WinsLabel"
            Text="Wins: 0"
            FontSize="18"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label 
            x:Name="LossesLabel"
            Text="Losses: 0"
            FontSize="18"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


        <!-- Add a spacer blank line -->
        <Label Text="" VerticalOptions="Center" HorizontalOptions="Center" />
        <!-- Add a spacer blank line -->
        <Label Text="" VerticalOptions="Center" HorizontalOptions="Center" />
        <Button x:Name="ResetStats" Text="Reset Statistics" Grid.Column="0" 
              FontSize="18" 
              Clicked="ResetStats_Click" 
              HorizontalOptions="Center" 
              VerticalOptions="Center"                    
              Padding="10,5"
              Margin="5" />
        
    </VerticalStackLayout>
</ContentPage>