<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PFBv01.Stats"
             Title="Stats">
    <VerticalStackLayout>
        <Label 
            Text="View and Reset your game statistics"
            FontSize="18"            
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


     
        <!-- Add a spacer solid black line -->
        <BoxView HeightRequest="1" Color="Black" HorizontalOptions="FillAndExpand" />
        <!-- Add a spacer blank line -->
        <Label Text="" VerticalOptions="Center" HorizontalOptions="Center" />       

        <Label 
            x:Name="GamesLabel"
            Text="Games: 0"
            FontSize="18"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Label 
            x:Name="WinsLabel"
            Text="Wins: 0"
            FontSize="18"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <!-- Indented labels for wins in various tries -->
        <VerticalStackLayout Padding="20,0,0,0">
            <Label 
                x:Name="GuessIn1TryLabel"
                Text="Guess in 1 try: 0"
                FontSize="16"
                VerticalOptions="Center" 
                HorizontalOptions="Start" />
            <Label 
                x:Name="GuessIn2TriesLabel"
                Text="Guess in 2 tries: 0"
                FontSize="16"
                VerticalOptions="Center" 
                HorizontalOptions="Start" />
            <Label 
                x:Name="GuessIn3TriesLabel"
                Text="Guess in 3 tries: 0"
                FontSize="16"
                VerticalOptions="Center" 
                HorizontalOptions="Start" />
            <Label 
                x:Name="GuessIn4TriesLabel"
                Text="Guess in 4 tries: 0"
                FontSize="16"
                VerticalOptions="Center" 
                HorizontalOptions="Start" />
            <Label 
                x:Name="GuessIn5TriesLabel"
                Text="Guess in 5 tries: 0"
                FontSize="16"
                VerticalOptions="Center" 
                HorizontalOptions="Start" />
            <Label 
                x:Name="GuessIn6TriesLabel"
                Text="Guess in 6 tries: 0"
                FontSize="16"
                VerticalOptions="Center" 
                HorizontalOptions="Start" />
            <Label 
                x:Name="GuessIn7TriesLabel"
                Text="Guess in 7 tries: 0"
                FontSize="16"
                VerticalOptions="Center" 
                HorizontalOptions="Start" />
            <Label 
                x:Name="GuessIn8TriesLabel"
                Text="Guess in 8 tries: 0"
                FontSize="16"
                VerticalOptions="Center" 
                HorizontalOptions="Start" />
            <Label 
                x:Name="GuessIn9TriesLabel"
                Text="Guess in 9 tries: 0"
                FontSize="16"
                VerticalOptions="Center" 
                HorizontalOptions="Start" />
            <Label 
                x:Name="GuessIn10TriesLabel"
                Text="Guess in 10 tries: 0"
                FontSize="16"
                VerticalOptions="Center" 
                HorizontalOptions="Start" />
        </VerticalStackLayout>


        <Label 
            x:Name="LossesLabel"
            Text="Losses: 0"
            FontSize="18"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


        <!-- Add a spacer blank line -->
        <Label Text="" VerticalOptions="Center" HorizontalOptions="Center" />
        <!-- Add a spacer blank line -->
        <Label Text="" VerticalOptions="Center" HorizontalOptions="Center" />
        <Button x:Name="ResetStats" Text="Reset Statistics" Grid.Column="0" 
              FontSize="18" 
              Clicked="ResetStats_Click" 
              HorizontalOptions="Center" 
              VerticalOptions="Center"                    
              Padding="10,5"
              Margin="5" />
        
    </VerticalStackLayout>
</ContentPage>